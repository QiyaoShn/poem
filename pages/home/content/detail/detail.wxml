<!--pages/home/content/detail/detail.wxml-->
<view wx:for="{{subject}}" wx:key="ID" class="gushi-page">
	<view wx:if="{{item.ID == detail_id}}" class="gushi" bindtap="">
		<text>{{item.title}}</text>
		<text style="margin: 10rpx 0;">{{item.author}}</text>
		<text style="margin-top: 20rpx;">{{item.content}}</text>
		<view class="gushi_detail">
			<text style="margin-top: 50rpx; font-weight: 600">◔译文：</text><text style=" margin-bottom: 30rpx">{{item.translate}}</text>
			<text style="font-weight: 600;">◑赏析：</text><text> {{item.comment}}</text>
			<text style="font-weight: 600; margin-top: 30rpx;">◕背景：</text><text style="">{{item.background}}</text>
			<text style="font-weight: 600; margin-top: 30rpx">◉作者：</text><text>{{item.author_sub}}</text>
		</view>
	</view>
	<view wx:else style="margin: 50rpx 30rpx">数据库有限，未查找到这首诗;\n请等待接入API或更新！</view>
	</view>
	<view class="button-position">
		<view class="button-style">
			<image class="{{isChecked2? 'stop iconfont .icon-zanting':'stopChange iconfont .icon-zanting'}}" catchtap="stop" ></image><text class="button-word2">背诵结束</text>
		</view>
		<view wx:if="{{rec}}" class="button-style">
			<image catchtap="begin" class="{{isChecked1? 'luyin iconfont .icon-luyin':'luyinChange iconfont .icon-luyin'}}"></image><text class="button-word1">开始背诵</text>
		</view>
		<view wx:else class="button-style">
			<image src="/images/recording.gif" class="luyin" catchtap="stop"></image>
			<text class="button-word1">录音中...</text>
		</view>
		<view class="button-style">
			<image catchtap="" class="{{isChecked3? 'bofang iconfont .icon-bofang':'bofangChange iconfont .icon-bofang'}}"></image><text class="button-word3">我的录音</text>
		</view>
	</view>
